            <div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Add new Offer</h4>
                  

                <form class="forms-sample" action="/admin/offers/create" method="post">

                    <% if (error && error.length > 0) { %>
                        <div class="alert alert-danger text-center" id="error-message">
                          <% error.forEach(function(message) { %>
                            <p><%= message %></p>
                          <% }); %>
                        </div>
                        <script>
                            setTimeout(function() {
                              var successMessage = document.getElementById('error-message');
                              if (successMessage) {
                                successMessage.style.display = 'none';
                              }
                            }, 2000); 
                          </script>
                    <% } %> 


                    <div class="form-group">
                      <label for="exampleInputName1">offer Name</label>
                      <input type="text" class="form-control" name="name" id="offerName" placeholder="Name" >
                      <small id="nameErr" class="text-danger"></small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Discount</label>
                        <input type="number" class="form-control" name="Discount"  id="Discount" placeholder="Discount" >
                        <small id="DiscountErr" class="text-danger"></small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">Start Date</label>
                        <input type="date" class="form-control" name="startDate" id="startDate" placeholder="start date" >
                        <small id="startDateErr" class="text-danger"></small>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputName1">end Date</label>
                        <input type="date" class="form-control" name="Expiry" id="Expiry" placeholder="Expiry date" >
                        <small id="ExpiryErr" class="text-danger"></small>
                    </div>

                    
                    
                    <button type="submit" onclick="return validateOffer()" class="btn btn-primary mr-2">Add</button>
                    <a href="/admin/offers" class="btn btn-light">Cancel</a>
                  </form>
                </div>
              </div>
            </div>
            
              
            </div>
          </div>
        </div>
